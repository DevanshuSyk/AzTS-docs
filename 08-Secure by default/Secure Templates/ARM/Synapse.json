{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "synapseWorkspaceName":{
            "type": "string",
            "metadata": {
                "description": "Synapse workspace name"
            }
        },
        "dataLakeStorageAccountUrl":{
            "type": "string",
            "metadata":{
                "description": "url of the data lake storage account which we need to associate with synapse workspace"
            }
        },
        "dataLakeStorageFileSystem":{
            "type": "string",
            "metadata":{
                "description": "File system name to associate with data lake storage and synapse workspace"
            }
        },
        "sqlAdminUser":{
            "type": "string",
            "metadata":{
                "description": "sql admin user "
            }
        },
        "sqlAdminUserPassword":{
            "type": "string",
            "metadata":{
                "description": "Password for sql admin user."
            }
        },
        "storageAccountId":{
            "type": "string",
            "metadata":{
                "description": "Storage account id to which the diagnostic logs and metrices will be sent."
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Synapse/workspaces",
            "apiVersion": "2019-06-01-preview",
            "name": "[parameters('synapseWorkspaceName')]",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "defaultDataLakeStorage": {
                    "accountUrl": "[parameters('dataLakeStorageAccountUrl')]",
                    "filesystem": "[parameters('dataLakeStorageFileSystem')]"
                },
                "sqlAdministratorLogin": "[parameters('sqlAdminUser')]",
                "sqlAdministratorLoginPassword": "[parameters('sqlAdminUserPassword')]"
            }
        },
        {
            // This one is required for diagnostic settings. (Azure_SynapseWorkspace_Audit_Enable_DiagnosticSettings_Trial)
            "scope":"[concat('Microsoft.Synapse/workspaces/', parameters('synapseWorkspaceName'))]",  
            "type":"Microsoft.Insights/diagnosticsettings",  
            "apiVersion":"2017-05-01-preview",  
            "name":"[concat('diag-', parameters('synapseWorkspaceName'))]",
            "dependsOn":[  
                "[resourceId('Microsoft.Synapse/workspaces', parameters('synapseWorkspaceName'))]"  
            ],  
            "properties":{  
                "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountId'))]",
                "logs": [
                    {
                        "category": "SynapseRbacOperations",
                        "enabled": true
                    },
                    {
                        "category": "GatewayApiRequests",
                        "enabled": true
                    },
                    {
                        "category": "BuiltinSqlReqsEnded",
                        "enabled": true
                    },
                    {
                        "category": "IntegrationPipelineRuns",
                        "enabled": true
                    },
                    {
                        "category": "IntegrationActivityRuns",
                        "enabled": true
                    },
                    {
                        "category": "IntegrationTriggerRuns",
                        "enabled": true
                    },
                    {
                        "category": "SynapseLinkEvent",
                        "enabled": true
                    }
                ],
                "metrics": [
                    {
                        "category": "AllMetrics",
                        "enabled": true
                    }
                ]
            }
        }
    ],
    "outputs": {}
}