{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.ApiManagement/service/identityProviders"
        },
        {
          "anyOf": [
            {
              "field": "Microsoft.ApiManagement/service/identityProviders/type",
              "equals": "google"
            },
            {
              "field": "Microsoft.ApiManagement/service/identityProviders/type",
              "equals": "facebook"
            },
            {
              "field": "Microsoft.ApiManagement/service/identityProviders/type",
              "equals": "microsoft"
            },
            {
              "field": "Microsoft.ApiManagement/service/identityProviders/type",
              "equals": "twitter"
            },     
            {
              "field": "Microsoft.ApiManagement/service/identityProviders/type",
              "equals": "aadb2c"
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effectType')]"
    }
  },
  "parameters": {
    "effectType": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "Audit",
        "Disabled",
        "Deny"
      ],
      "defaultValue": "Audit"
    }
  }
}